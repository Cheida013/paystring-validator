{
    "autoload": {
        "psr-0": {
            "": "lib/"
        }
    },
    "require": {
        "aws/aws-sdk-php": "^3.145",
        "guzzlehttp/guzzle": "^7.0",
        "justinrainbow/json-schema": "^5.2",
        "monolog/monolog": "^2.1",
        "web-token/jwt-easy": "^2.1",
        "web-token/jwt-encryption-algorithm-rsa": "^2.1",
        "web-token/jwt-signature": "^2.1",
        "web-token/jwt-signature-algorithm-ecdsa": "^2.1",
        "web-token/jwt-signature-algorithm-experimental": "^2.1",
        "web-token/jwt-signature-algorithm-rsa": "^2.1"
    },
    "config": {
        "vendor-dir": "vendor",
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true,
        "github-domains": [
            "github.com"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "install-hooks": [
            "cp ../.githooks/pre-commit ../.git/hooks/pre-commit",
            "chmod +x ../.git/hooks/pre-commit"
        ],
        "post-install-cmd": [
            "@install-hooks"
        ],
        "post-update-cmd": [
            "@install-hooks"
        ]
    }
}
